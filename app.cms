$sended = 0
$delay = RND(100,200)

start:

WAITMS ($delay)


// проверка соединения

isConnect()

IF($isConnect ! "true")
  error("Нет соединения с сервером")
END_IF


// проверка данных

getDataStatus()

IF($dataStatus = "end")
  message(STRCONCAT("Рассылка закончна. Отправлено: ", $sended))
  halt
END_IF

IF($dataStatus = "bad")
  nextPos()
	goto(start)
END_IF

// добавление данных в mail.ru

addData()

WAITMS (RND(100,200))

clickToSend()

isSendedEmail()

IF($isSendedEmail = "false")
  clickToNotSended()
END_IF

IF($isSendedEmail = "error")
  error("Time Limited при отправке письма")
END_IF

WAITMS (RND(100,200))

newEmail()

nextPos()

INC($sended, 1)

goto(start)


halt